{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
        "type": "shell",
        "script": "provision.sh"
      },
      {
        "type": "ansible-local",
        "playbook_file": "playbook.yml"
      }
  ],
  "builders": [{
    "account_id": "433291100556",
    "s3_bucket": "packeraws",
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-80861296",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "social_network_stalker_{{timestamp}}",
    "x509_cert_path": "/usr/lib/openssl/aws/server.crt",
    "x509_key_path": "/usr/lib/openssl/aws/privatekey.pem"
  }]
}
