{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
        "type": "shell",
        "script": "provision.sh"
      },
      {
        "type": "ansible-local",
        "playbook_file": "playbook.yml"
      }
  ],
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-80861296",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "social_network_stalker_{{timestamp}}",
    "tags": {
        "app": "social_network_stalker"
      },
    "run_tags": {
        "app": "social_network_stalker"
      }
  }]
}
